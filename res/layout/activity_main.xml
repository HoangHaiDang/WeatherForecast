
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mweather"
    android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
        <EditText 
            android:id="@+id/edtHomeAddress"
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:hint="City's Name..."/>
        <ImageButton
            android:id="@+id/btnSearchWeather"
            android:layout_width="70dp"
            android:layout_height="wrap_content" 
            android:layout_marginStart="5dp"
            android:src="@drawable/search"/>
        <ImageButton
            android:id="@+id/btnLocalWeather"
            android:layout_width="70dp"
            android:layout_height="wrap_content" 
            android:layout_marginStart="5dp"
            android:src="@drawable/ulocal"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Location's weather forecasts next 7 days."
        android:textColor="#080d0b"
        android:textSize="16sp"
        android:textStyle="italic" />
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    <TextView
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:text="Date"
	        android:padding="20dp"
	        android:textColor="#ff1e0b"/>
	    <TextView android:text="Status"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:padding="20dp"
	        android:textColor="#ff1e0b"/>
	    <TextView android:text="Temp"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:padding="20dp"
	        android:textColor="#ff1e0b"/>
		<TextView android:text="Press"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:padding="20dp"
	        android:textColor="#ff1e0b"/>
	</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        	<ListView 
        	    android:id="@+id/lvsweathers"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"></ListView>
    </LinearLayout>
    
</LinearLayout>
